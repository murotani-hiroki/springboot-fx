<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrtn.fx.mybatis.repository.ext.TradeSearchMapper">
    <select id="findByTradingDate" resultType="com.mrtn.fx.mybatis.entity.ext.TradeList">
        SELECT
            t.id,
            trading_date,
            settlement_date,
            currency_pair_id,
            c.currency_pair,
            trade_type,
            quantity,
            entry_price,
            exit_price,
            stop_loss,
            profit,
            comment,
            image_id
        FROM
            trade t
        INNER JOIN currency_pair c ON
            t.currency_pair_id = c.id
        <where>
            <if test="fromDate != null and fromDate != ''">
                <![CDATA[
                trading_date >= cast(#{fromDate} as date)
                ]]>
            </if>
            <if test="toDate != null and toDate != ''">
                <![CDATA[
                AND trading_date <= cast(#{toDate} as date)
                ]]>
            </if>
        </where>
        ORDER BY
            trading_date
    </select>
</mapper>

